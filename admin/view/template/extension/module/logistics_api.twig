{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right">
				<button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
				<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
					<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="container-fluid">
		{% if error_warning %}
			<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
				<button type="button" class="close" data-dismiss="alert">&times;</button>
			</div>
		{% endif %}
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
			</div>
			<div class="panel-body">
				<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
						<div class="col-sm-10">
							<select name="module_logistics_api_status" id="input-status" class="form-control">
								{% if status %}
									<option value="1" selected="selected">{{ text_enabled }}</option>
									<option value="0">{{ text_disabled }}</option>
								{% else %}
									<option value="1">{{ text_enabled }}</option>
									<option value="0" selected="selected">{{ text_disabled }}</option>
								{% endif %}
							</select>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-debug">{{ entry_debug }}</label>
						<div class="col-sm-10">
							<select name="module_logistics_api_debug" id="input-debug" class="form-control">
								{% if debug %}
									<option value="1" selected="selected">{{ text_enabled }}</option>
									<option value="0">{{ text_disabled }}</option>
								{% else %}
									<option value="1">{{ text_enabled }}</option>
									<option value="0" selected="selected">{{ text_disabled }}</option>
								{% endif %}
							</select>
						</div>
					</div>

					<div class="form-group required">
						<label class="col-sm-2 control-label" for="input-id-clients">{{ entry_api_username }}</label>
						<div class="col-sm-10">
							<input type="text" name="module_logistics_api_api_username" value="{{ api_username }}" placeholder="{{ entry_api_username }}" id="input-id-clients" class="form-control" />
							{% if error_api_username %}
								<div class="text-danger">{{ error_api_username }}</div>
							{% endif %}
						</div>
					</div>
					<div class="form-group required">
						<label class="col-sm-2 control-label" for="input-secret-clients">{{ entry_api_password }}</label>
						<div class="col-sm-10">
							<input type="text" name="module_logistics_api_api_password" value="{{ api_password }}" placeholder="{{ entry_api_password }}" id="input-secret-clients" class="form-control" />
							{% if error_api_password %}
								<div class="text-danger">{{ error_api_password }}</div>
							{% endif %}
						</div>
					</div>
					<div class="form-group required">
						<label class="col-sm-2 control-label" for="input-currency-value">{{ entry_api_url }}</label>
						<div class="col-sm-10">
							<input type="text" name="module_logistics_api_api_url" value="{{ api_url }}" placeholder="{{ entry_api_url }}" id="input-currency-value" class="form-control" />
							{% if error_api_url %}
								<div class="text-danger">{{ error_api_url }}</div>
							{% endif %}
						</div>
					</div>

					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-update-category">{{ entry_update_category }}</label>
						<div class="col-sm-10">
							<select name="module_logistics_api_update_category" id="input-update-category" class="form-control">
								{% if update_category %}
									<option value="1" selected="selected">{{ text_enabled }}</option>
									<option value="0">{{ text_disabled }}</option>
								{% else %}
									<option value="1">{{ text_enabled }}</option>
									<option value="0" selected="selected">{{ text_disabled }}</option>
								{% endif %}
							</select>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-update-product">{{ entry_update_product }}</label>
						<div class="col-sm-10">
							<select name="module_logistics_api_update_product" id="input-update-product" class="form-control">
								{% if update_product %}
									<option value="1" selected="selected">{{ text_enabled }}</option>
									<option value="0">{{ text_disabled }}</option>
								{% else %}
									<option value="1">{{ text_enabled }}</option>
									<option value="0" selected="selected">{{ text_disabled }}</option>
								{% endif %}
							</select>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-update-product-attributes">{{ entry_update_product_attributes }}</label>
						<div class="col-sm-10">
							<select name="module_logistics_api_update_product_attributes" id="input-update-product-attributes" class="form-control">
								{% if update_product_attributes %}
									<option value="1" selected="selected">{{ text_enabled }}</option>
									<option value="0">{{ text_disabled }}</option>
								{% else %}
									<option value="1">{{ text_enabled }}</option>
									<option value="0" selected="selected">{{ text_disabled }}</option>
								{% endif %}
							</select>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-attributes-common-group">{{ entry_attributes_common_group }}</label>
						<div class="col-sm-10">
							<select name="module_logistics_api_attributes_common_group" id="input-attributes-common-group" class="form-control">
								{% if attributes_common_group %}
									<option value="1" selected="selected">{{ text_enabled }}</option>
									<option value="0">{{ text_disabled }}</option>
								{% else %}
									<option value="1">{{ text_enabled }}</option>
									<option value="0" selected="selected">{{ text_disabled }}</option>
								{% endif %}
							</select>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-attributes-values-multi-language">{{ entry_attributes_values_multi_language }}</label>
						<div class="col-sm-10">
							<select name="module_logistics_api_attributes_values_multi_language" id="input-attributes-values-multi-language" class="form-control">
								{% if attributes_values_multi_language %}
									<option value="1" selected="selected">{{ text_enabled }}</option>
									<option value="0">{{ text_disabled }}</option>
								{% else %}
									<option value="1">{{ text_enabled }}</option>
									<option value="0" selected="selected">{{ text_disabled }}</option>
								{% endif %}
							</select>
						</div>
					</div>

					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-update-special-discount">{{ entry_update_special_discount }}</label>
						<div class="col-sm-10">
							<select name="module_logistics_api_update_special_discount" id="input-update-special-discount" class="form-control">
								{% if update_special_discount %}
									<option value="1" selected="selected">{{ text_enabled }}</option>
									<option value="0">{{ text_disabled }}</option>
								{% else %}
									<option value="1">{{ text_enabled }}</option>
									<option value="0" selected="selected">{{ text_disabled }}</option>
								{% endif %}
							</select>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-update-images">{{ entry_update_images }}</label>
						<div class="col-sm-10">
							<select name="module_logistics_api_update_images" id="input-update-images" class="form-control">
								{% if update_images %}
									<option value="1" selected="selected">{{ text_enabled }}</option>
									<option value="0">{{ text_disabled }}</option>
								{% else %}
									<option value="1">{{ text_enabled }}</option>
									<option value="0" selected="selected">{{ text_disabled }}</option>
								{% endif %}
							</select>
						</div>
					</div>



					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-language-links">{{ entry_language_links }}</label>
						<div class="col-sm-10">
							{% for code, language in languages %}
								<div class="row" id="input-language-links">
									<div class="col-sm-1">
										<span>{{ language.name }}</span>
									</div>
									<div class="col-sm-11">
										<select name="module_logistics_api_laguages_links[{{ language.language_id }}]" class="form-control">
											{% for shop_lang_id, shop_lang_name in shoprenter_languages %}
												{% if language_links[language.language_id] == shop_lang_id %}
													<option value="{{ shop_lang_id }}" selected="selected">{{ shop_lang_name }}</option>
												{% else %}
													<option value="{{ shop_lang_id }}">{{ shop_lang_name }}</option>
												{% endif %}
											{% endfor %}
										</select>
									</div>
								</div>
								<br>
							{% endfor %}
						</div>
					</div>

				</form>

				<div class="form-group" style="display: inline-block; width: 100%;">
					<div class="col-sm-12">
						<a class="btn btn-default" id="delete_all_links" onclick="delete_all_links(); return false;" href="{{ delete_all_links }}">{{ button_delete_all_links }}</a>
					</div>
				</div>

				<div class="form-group" style="display: inline-block; width: 100%;">
					<div class="col-sm-12">
						<p>{{ logistics_api_cron }}</p>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>
<script>
	function delete_all_links(){
		if (confirm('{{ text_confirm }}')) {
			$.ajax({
				'type': "GET",
				'url': $("#delete_all_links").attr("href"),
				success: function () {
					alert('{{ text_success}}' );
				}
			});
		}
		return false;
	};
</script>
{{ footer }}